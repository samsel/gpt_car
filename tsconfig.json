{
  "compilerOptions": {
    "target": "es2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "rootDir": "./mcp-server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "mcp-server/**/*",
    "node_modules/@modelcontextprotocol"
  ],
  "exclude": [
    "node_modules"
  ]
}