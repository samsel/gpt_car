{
  "compilerOptions": {
    "target": "es2023",
    "module": "node20",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "node_modules/@modelcontextprotocol"
  ],
  "exclude": [
    "node_modules"
  ],
}